  Custom Image Banner Section
  File: sections/clouda-custom-image-banner.liquid
{% endcomment %}

{%- liquid
  assign section_id = 'custom-image-banner-' | append: section.id
  assign image = section.settings.banner_image
  assign mobile_image = section.settings.mobile_image
  assign heading = section.settings.main_heading
  assign description = section.settings.sub_heading
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign text_align = section.settings.text_alignment
  assign banner_height = section.settings.banner_height
  assign show_overlay = section.settings.show_overlay

  assign text_color_style = ''
  if section.settings.main_heading_color != blank
    assign text_color_style = 'color: ' | append: section.settings.main_heading_color | append: ';'
  endif

  assign sub_text_color_style = ''
  if section.settings.sub_heading_color != blank
    assign sub_text_color_style = 'color: ' | append: section.settings.sub_heading_color | append: ';'
  endif

  assign button_bg_style = ''
  if section.settings.button_bg_color != blank
    assign button_bg_style = 'background-color: ' | append: section.settings.button_bg_color | append: ';'
  endif

  assign button_text_style = ''
  if section.settings.button_text_color != blank
    assign button_text_style = 'color: ' | append: section.settings.button_text_color | append: ';'
  endif

  assign overlay_style = ''
  if show_overlay and section.settings.overlay_color != blank
    assign overlay_style = 'background: ' | append: section.settings.overlay_color | append: ';'
  endif
-%}

<div class="clouda-custom-banner" id="{{ section_id }}">
  <div class="clouda-banner-container">
    {% if image %}
      <div class="clouda-banner-image">
        <picture>
          {% if mobile_image %}
            <source media="(max-width: 768px)" srcset="{{ mobile_image | img_url: '768x' }}">
          {% endif %}
          <img
            src="{{ image | img_url: '1920x' }}"
            alt="{{ image.alt | default: heading }}"
            loading="lazy"
            width="1920"
            height="auto">
        </picture>
      </div>
    {% endif %}

    <div class="clouda-banner-content">
      <div
        class="clouda-banner-text"
        {% if show_overlay %}
        style="{{ overlay_style }}"
        {% endif %}>
        {% if heading != blank %}
          <h2 class="clouda-main-heading" style="{{ text_color_style }}">{{ heading }}</h2>
        {% endif %}

        {% if description != blank %}
          <p class="clouda-sub-heading" style="{{ sub_text_color_style }}">{{ description }}</p>
        {% endif %}

        {% if button_text != blank and button_link != blank %}
          <div class="clouda-button-wrapper">
            <a
              href="{{ button_link }}"
              class="clouda-banner-button"
              style="{{ button_bg_style }}{{ button_text_style }}">
              {{ button_text }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .clouda-custom-banner {
    position: relative;
    width: 100%;
    overflow: hidden;
    background: {{ section.settings.background_color | default: '#f8f8f8' }};
  }

  .clouda-banner-container {
    position: relative;
    display: flex;
    align-items: center;
    min-height: {{ banner_height | default: 500 }}px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .clouda-banner-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .clouda-banner-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .clouda-banner-content {
    position: relative;
    z-index: 2;
    width: 100%;
    display: flex;
    justify-content: {{ text_align | default: 'center' }};
    align-items: center;
    padding: 40px 0;
  }

  .clouda-banner-text {
    text-align: {{ text_align | default: 'center' }};
    max-width: 600px;
    {% unless show_overlay %}
      background: {{ section.settings.overlay_color | default: 'rgba(0,0,0,0.5)' }};
    {% endunless %}
    padding: 40px;
    border-radius: 8px;
    backdrop-filter: blur(10px);
  }

  .clouda-main-heading {
    font-size: {{ section.settings.main_heading_size | default: 48 }}px;
    font-weight: {{ section.settings.main_heading_weight | default: 'bold' }};
    color: {{ section.settings.main_heading_color | default: '#ffffff' }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .clouda-sub-heading {
    font-size: {{ section.settings.sub_heading_size | default: 18 }}px;
    font-weight: {{ section.settings.sub_heading_weight | default: 'normal' }};
    color: {{ section.settings.sub_heading_color | default: '#ffffff' }};
    margin: 0 0 24px;
    line-height: 1.4;
  }

  .clouda-button-wrapper {
    margin-top: 24px;
  }

  .clouda-banner-button {
    display: inline-block;
    background: {{ section.settings.button_bg_color | default: '#ffffff' }};
    color: {{ section.settings.button_text_color | default: '#000000' }};
    padding: 12px 24px;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    font-size: 16px;
    transition: all 0.3s ease;
    border: 2px solid{{ section.settings.button_bg_color | default: '#ffffff' }};
  }

  .clouda-banner-button:hover {
    background: {{ section.settings.button_hover_bg | default: 'transparent' }};
    color: {{ section.settings.button_hover_text | default: '#ffffff' }};
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .clouda-banner-container {
      min-height: {{ section.settings.mobile_height | default: 400 }}px;
      padding: 0 15px;
    }

    .clouda-banner-text {
      padding: 30px 20px;
    }

    .clouda-main-heading {
      font-size: {{ section.settings.mobile_main_size | default: 32 }}px;
    }

    .clouda-sub-heading {
      font-size: {{ section.settings.mobile_sub_size | default: 16 }}px;
    }
  }

  @media (max-width: 480px) {
    .clouda-main-heading {
      font-size: {{ section.settings.mobile_main_size | default: 28 }}px;
    }

    .clouda-sub-heading {
      font-size: {{ section.settings.mobile_sub_size | default: 14 }}px;
    }
  }
</style>
