{{ 'section-top-brands.css' | asset_url | stylesheet_tag }}

<div class="top-brands-section" data-section-id="{{ section.id }}" data-section-type="top-brands">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="top-brands__title">{{ section.settings.title | escape }}</h2>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="top-brands__grid">
        {% for block in section.blocks %}
          <div class="top-brands__item" {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}
              <a
                href="{{ block.settings.link }}"
                class="top-brands__link"
                aria-label="{{ block.settings.image.alt | default: 'Brand logo' }}"
              >
            {% endif %}
            {% if block.settings.image != blank %}
              <img
                class="top-brands__image"
                src="{{ block.settings.image | image_url: width: 300 }}"
                alt="{{ block.settings.image.alt | default: 'Brand logo' }}"
                loading="lazy"
                width="{{ block.settings.image_width | default: 150 }}"
                height="{% if block.settings.image.height and block.settings.image_width %}{{ block.settings.image.height | times: block.settings.image_width | divided_by: block.settings.image.width }}{% else %}150{% endif %}"
              >
            {% else %}
              {{ 'logo' | placeholder_svg_tag: 'placeholder-svg top-brands__placeholder' }}
            {% endif %}
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.blocks.size == 0 %}
      <p class="top-brands__no-blocks-message">No brands to display.</p>
    {% endif %}

    <hr class="top-brands__separator">
  </div>
</div>

{% schema %}
{
  "name": "Top Brands",
  "tag": "section",
  "class": "section-top-brands-outer",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Top Brands"
    }
  ],
  "blocks": [
    {
      "type": "brand_image",
      "name": "Brand",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional: Link to a collection or brand page."
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 50,
          "max": 250,
          "step": 10,
          "unit": "px",
          "label": "Logo width",
          "default": 150
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Top Brands",
      "blocks": [
        { "type": "brand_image" },
        { "type": "brand_image" },
        { "type": "brand_image" },
        { "type": "brand_image" },
        { "type": "brand_image" },
        { "type": "brand_image" }
      ]
    }
  ]
}
{% endschema %}
